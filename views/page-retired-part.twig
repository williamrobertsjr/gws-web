{% extends "base.twig" %}
{% set page_title = "Replacement Part Notice: " ~ replacement_part %}
{% block content %}
{# {% include "page-header.twig" %} #}
<section class="container mx-auto flex flex-col md:flex-row justify-between items-center pt-96 pb-52">
