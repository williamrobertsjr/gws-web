        {# <h1>Your search: {{retired_part}}</h1>
        <h1>Replacement part: {{replacement_part}}</h1> #}
        <div class="mt-4">
            <a href="/product?part={{replacement_part}}" class="btn light-blue w-full">View New Product Page</a>
        </div>
        
    </div>
    <div class="md:6/12 mx-auto justify-center items-center">
		<img src="/wp-content/uploads/2024/02/404_image.jpg" alt="">
	</div>
    
</section>
