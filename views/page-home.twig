{% extends 'base.twig' %}

{% block content %}

{# Images for Hero Background #}
{% set image1 = post.meta('first_image_image') ? post.meta('first_image_image').url : '' %}
{% set image2 = post.meta('second_image_image') ? post.meta('second_image_image').url : '' %}
{% set image3 = post.meta('third_image_image') ? post.meta('third_image_image').url : '' %}
{% set image4 = post.meta('fourth_image_image') ? post.meta('fourth_image_image').url : '' %}

<section id="home-hero" class="flex flex-col justify-center items-center relative"
    data-image1="{{ image1 }}"
    data-image2="{{ image2 }}"
    data-image3="{{ image3 }}"
    data-image4="{{ image4 }}">

    <div>
        <h2 class="text-center hero-tagline">{{post.meta('headline_top')}}</h2>
        <h2 class="text-center hero-tagline-big">{{post.meta('headline_bottom')}}</h2>
    </div>

    <div id="hero-links" class="flex justify-center">
        <div class="flex md:flex-row flex-col justify-between md:justify-evenly items-center gap-y-4 w-full lg:w-8/12 xl:w-6/12">
            <h3 class="hero-link me-5" data-hero-index="0"><a href="{{post.meta('first_image_link')}}">{{post.meta('first_image_link_text')}}</a></h3>
            <h3 class="hero-link me-5" data-hero-index="1"><a href="{{post.meta('second_image_link')}}">{{post.meta('second_image_link_text')}}</a></h3>
            <h3 class="hero-link me-5" data-hero-index="2"><a href="{{post.meta('third_image_link')}}">{{post.meta('third_image_link_text')}}</a></h3>
            <h3 class="hero-link me-5" data-hero-index="3"><a href="{{post.meta('fourth_image_link')}}">{{post.meta('fourth_image_link_text')}}</a></h3> 
    </div>

</section>


<section id="whats-new" class="ps-4 sm:ps-20 py-36">
    
    <div>
        <h2 class="text-4xl sm:text-6xl">What's New</h2>
        <p class="text-xl font-light pt-8">News, case studies, and more from GWS Tool Group</p>
    </div>

    <div class="mt-20">
        <div class="swiper">
            <div class="swiper-wrapper pb-4">
                {# Blog Roll Here #}
                {% for post in posts %} 
                    <div class="me-4 p-5 card swiper-slide box-shadow relative" style="background-image:url('{{post.thumbnail()}}'); background-position: center;">
                            <a href="{{post.link}}" class="absolute h-full w-full"></a>
                            <div>
                                <p class="category">{{ post.category() }}</p> 
                            </div>
                            <div>
                                <h3 class="title mb-2">{{ post.title }}</h3>
                                {% if post.category() == 'Case Study' %}
                                <p class="excerpt mb-3">{{post.meta('cs_excerpt')|custom_excerpt(20)}}</p>
                                {% else %}
                                <p class="excerpt mb-3">{{ post.content|custom_excerpt(20) }}</p> 
                                {% endif %}
                                
                                <button class="btn pale-blue"><a href="{{post.link}}">Read More<i class="fa-solid fa-arrow-right-long mx-3"></i></a></button>
                            </div>
                        </div>
                {% endfor %}
                <div class="me-4 p-5 card min-w-fit">
                    <button class="btn light-blue"><a class="px-4" href="/gws-blog">See All Posts</a></button>
                </div>
            </div>
            <div class="swiper-scrollbar"></div>
        </div>
        <div class="swiper-controls flex gap-x-6 mt-10">
                <i class="text-4xl font-bold text-pale-blue fa-solid fa-arrow-left-long prevEl"></i>
                <i class="text-4xl font-bold text-pale-blue fa-solid fa-arrow-right-long nextEl"></i>
        </div>
    </div>

</section>



<section id="glance" class="pt-40">
    <div class="container mx-auto flex flex-col lg:flex-row px-8 md:px-10">
    
        <div class="w-full lg:w-6/12 pb-20 xl:pb-60">
            <h2 class="text-5xl md:text-6xl  font-black leading-none mb-0">At A</h2>
            <h2 class="text-6xl md:text-9xl leading-none font-black text-outline">Gl<span class="text-outline">a</span>nce</h2>
            <div class="glance-feature mt-20 md:mt-28">
                <h3>2014</h3>
                <p>GWS Tool Group Foundation</p>
                <p class="divider text-3xl mt-14">//////////////////////////////////////////////////</p>
            </div>
            <div class="glance-feature">
                <h3>12</h3>
                <p>North American<br>manufacturing facilities</p>
                <p class="divider mt-14">//////////////////////////////////////////////////</p>
            </div>
            <div class="glance-feature">
                <h3>30,000+</h3>
                <p>Standard cutting tools offered</p>
                <p class="divider mt-14">//////////////////////////////////////////////////</p>
            </div>
            <div class="glance-feature">
                <h3>250,000+</h3>
                <p>Custom cutting tools offered</p>
                <p class="divider mt-14">//////////////////////////////////////////////////</p>
            </div>
            <div class="glance-feature">
                <h3>Tavares, FL</h3>
                <p>GWS Headquarters</p>
            </div>
            <div class="mt-20 md:mt-32">
                <p class="text-xl">Read more about</p>
                <h3 class="text-5xl font-extrabold text-pale-blue">GWS Tool Group</h3>
                <button class="btn white-outline mt-12 hvr-float"><a href="/who-we-are">About Us <i class="fa-solid fa-arrow-right ms-3 rotate-45"></i></a></button>
            </div>
        </div>
    
        <div id="collage-col" class="xl:w-6/12 flex flex-col mx-auto gap-y-6">
            <div class="ps-6 flex items-center"><img src="/wp-content/uploads/2023/12/3fl-1-32-end-mill-polished.jpg" alt=""></div>
            <div class="pe-6 flex items-center"><img src="/wp-content/uploads/2024/01/Coating_MI-2-scaled.jpg" alt=""></div>
            <div class="ps-6 flex items-center"><img src="/wp-content/uploads/2024/02/home_collage.jpg" alt=""></div>
            <div class="pe-6 flex items-center"><img src="/wp-content/uploads/2024/02/whirler_cage_fx7.jpg" alt=""></div>
        </div>

    </div>
</section>

