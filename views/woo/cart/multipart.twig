{% block content %}

<div class="border border-b-2 border-x-0 border-t-0 border-white w-8/12 my-10">
  <form id="bulk-add-form" class="bulk-add-form ">
  <h2 class="text-xl font-semibold">Rapid Quote</h2>
  <p class="text-white">Know your parts? Add one part per line to bulk add products.</p>
    <div class="w-full flex flex-col gap-x-2 justify-between mt-4">
        <div class="w-full"><textarea id="bulk-parts" name="bulk_parts" rows="1" class="w-full border p-2"></textarea></div>
        <div class="mt-4 text-right">
          <button type="submit" class="btn light-blue">Add +</button>
          <button id="clear-cart" class="btn black">
            Clear
          </button>
        </div>
    </div>
  </form>
</div>
<div id="loading-bar" class="transition-all duration-500 h-2 bg-pale-blue w-0 z-50"></div>
<div id="bulk-add-feedback" class="text-white"></div>
<script src="/wp-content/themes/gws-web/views/woo/js/multipart-add.js"></script>
{% endblock %}